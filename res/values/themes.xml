<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/action_bar_title_text</item>       
        <item name="android:background">@color/color_BeaconBlack</item>
    </style>
    
    <style name="action_bar_title_text">
	    <item name="android:textColor">@color/color_BeaconWhite</item>
	    <item name="android:gravity">center</item>
	</style>
</resources>
