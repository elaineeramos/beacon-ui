<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beacon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.example.beacon.MainActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.beacon.ReportPerson"
            android:label="@string/title_activity_report_person" 
            android:parentActivityName="com.example.beacon.MainActivity">
        </activity>
        <activity
            android:name="com.example.beacon.FoundPerson"
            android:label="@string/title_activity_found_person" 
            android:parentActivityName="com.example.beacon.ReportPerson">
        </activity>
        <activity
            android:name="com.example.beacon.RescuePerson"
            android:label="@string/title_activity_rescue_person" 
            android:parentActivityName="com.example.beacon.ReportPerson">
        </activity>
        <activity
            android:name="com.example.beacon.InformQuerier"
            android:label="@string/title_activity_inform_querier" 
            android:parentActivityName="com.example.beacon.MainActivity">
        </activity>
    </application>

</manifest>
